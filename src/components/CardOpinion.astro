---
const { nombreVisitante, profesionVisitante, opinion, imagenVisitante } = Astro.props
---

<div class="mb-3 flex p-5 bg-white border border-gray-200 rounded-lg shadow-md">
  <div class="w-4/5 pr-3">
    <h2 class="text-lg font-extrabold">{nombreVisitante}</h2>
    <span class="font-bold text-gray-500">{profesionVisitante}</span>
    <p class="mt-3 mb-4 font-light text-gray-500">{opinion}
    </p>
  </div>
  <div class=" w-1/6 ">
    <img
      class="object-cover w-screen h-auto rounded-lg"
      src={imagenVisitante}
      alt={nombreVisitante}
    />
  </div>
</div>
