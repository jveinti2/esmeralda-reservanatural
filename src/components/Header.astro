---
import ButtonHeader from "../components/ButtonHeader.astro";
---

<script src="//unpkg.com/alpinejs" defer></script>

<div class="relative bg-white">
  <div class="mx-auto max-w-7xl px-6">
    <div
      class="flex items-center justify-between border-b-2 border-gray-100 py-2 md:justify-start md:space-x-10"
    >
      <div class="flex justify-start lg:w-0 lg:flex-1">
        <a href="/">
          <span class="sr-only">Your Company</span>

          <img
            class="w-auto h-20 sm:h-24 lg:w-auto lg:h-20 xl:h-24 2xl:h-28 "
            src="/Logo_reserva_natural_svg.svg"
            alt="logo"
          />
        </a>
      </div>
      <div>

        <section x-data="{ isOpen: false }">
          <div class="flex items-center justify-between">
            <button x-cloak @click="isOpen = !isOpen" class="md:hidden">
              <span x-show="isOpen">
                <svg
                  class="w-6 h-6 fill-gray-800"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 320 512"
                >
                  <path
                    d="M310.6 361.4c12.5 12.5 12.5 32.75 0 45.25C304.4 412.9 296.2 416 288 416s-16.38-3.125-22.62-9.375L160 301.3L54.63 406.6C48.38 412.9 40.19 416 32 416S15.63 412.9 9.375 406.6c-12.5-12.5-12.5-32.75 0-45.25l105.4-105.4L9.375 150.6c-12.5-12.5-12.5-32.75 0-45.25s32.75-12.5 45.25 0L160 210.8l105.4-105.4c12.5-12.5 32.75-12.5 45.25 0s12.5 32.75 0 45.25l-105.4 105.4L310.6 361.4z"
                  ></path>
                </svg>
              </span>
              <span x-show="!isOpen">
                <svg
                  class="w-6 h-6 text-gray-800"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 448 512"
                >
                  <path
                    d="M0 96C0 78.33 14.33 64 32 64H416C433.7 64 448 78.33 448 96C448 113.7 433.7 128 416 128H32C14.33 128 0 113.7 0 96zM0 256C0 238.3 14.33 224 32 224H416C433.7 224 448 238.3 448 256C448 273.7 433.7 288 416 288H32C14.33 288 0 273.7 0 256zM416 448H32C14.33 448 0 433.7 0 416C0 398.3 14.33 384 32 384H416C433.7 384 448 398.3 448 416C448 433.7 433.7 448 416 448z"
                  ></path>
                </svg>
              </span>
            </button>
          </div>

          <div
            x-cloak
            :class="[isOpen ? 'translate-x-0 opacity-100 ' : 'opacity-0 -translate-x-full']"
            class="absolute inset-x-0 z-20 w-full px-6 py-8 mt-8 space-y-6 transition-all duration-300 ease-in-out bg-white top-16 md:bg-transparent md:dark:bg-transparent md:mt-0 md:p-0 md:top-0 md:relative md:w-auto md:opacity-100 md:translate-x-0 md:space-y-0 md:-mx-6 md:flex md:items-center"
          >
            <div
              class="flex flex-col items-start justify-center w-full space-y-2 md:flex-row md:space-y-0 md:space-x-6"
            >
              <ButtonHeader name="Inicio" link="/" />
              <ButtonHeader name="La reserva" link="/reserva" />
              <ButtonHeader name="Servicios" link="/servicios" />
              <ButtonHeader name="Galería" link="/galeria" />
              <ButtonHeader name="Contáctanos" link="/contactanos" />
              <ButtonHeader name="Apóyanos" link="/apoyanos"/>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
</div>
